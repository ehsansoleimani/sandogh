<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
   http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="users-table-init" author="Ehsan">
        <createTable tableName="users">
            <column name="id" type="bigserial">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="creationdate" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="varchar(50)"/>
            <column name="email" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="token" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean">

            </column>

        </createTable>
    </changeSet>
    <changeSet id="customers-table-init" author="Ehsan">
        <createTable tableName="customers">
            <column name="id" type="serial">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="role-table-init" author="Behzad">
        <createTable tableName="role">
            <column name="id" type="serial">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="role" type="varchar(255)">
            </column>
            <column name="user" type="bigint">
                <constraints foreignKeyName="fk_role_users" referencedTableName="users" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>